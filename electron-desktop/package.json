{
  "name": "shafy-doctor-desktop",
  "version": "1.0.0",
  "description": "Shafy Doctor Desktop Application",
  "main": "main.js",
  "author": "Shafy",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run dev:react\" \"wait-on http://localhost:3000 && electron .\"",
    "dev:react": "cd ../ && npm run dev",
    "prebuild": "node copy-build-files.js",
    "build": "npm run build:react && npm run build:electron",
    "build:react": "cd ../ && npm run build",
    "build:electron": "electron-builder",
    "start": "electron .",
    "pack": "npm run prebuild && electron-builder --dir",
    "dist": "npm run prebuild && electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "appId": "com.shafy.doctor",
    "productName": "Shafy Doctor",
    "directories": {
      "buildResources": "build",
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "database/**/*",
      "services/**/*",
      ".next/**/*",
      "public/**/*",
      "node_modules/next/**/*",
      "node_modules/react/**/*",
      "node_modules/react-dom/**/*",
      "node_modules/@emotion/**/*",
      "node_modules/@mui/**/*",
      "package.json",
      "!node_modules/**/.cache/**/*"
    ],
    "asarUnpack": [
      ".next/**/*",
      "node_modules/next/**/*"
    ],
    "win": {
      "target": ["nsis", "portable"],
      "icon": "../public/logo.ico"
    },
    "mac": {
      "target": ["dmg", "zip"],
      "icon": "../public/logo.png"
    },
    "linux": {
      "target": ["AppImage", "deb"],
      "icon": "../public/logo.png"
    }
  },
  "dependencies": {
    "better-sqlite3": "^11.7.0",
    "firebase": "^12.1.0",
    "electron-store": "^10.1.0"
  },
  "devDependencies": {
    "electron": "^32.2.6",
    "concurrently": "^9.1.0",
    "electron-builder": "^25.1.8",
    "wait-on": "^8.0.1"
  }
}
